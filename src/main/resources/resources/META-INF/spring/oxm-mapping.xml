<mapping>
    <class name="com.puente.domain.Book">
        <field name="contacts" type="com.puente.domain.Book" collection="arraylist">
            <bind-xml name="book"/>
        </field>
    </class>

    <class name="com.puente.domain.Book" identity="id">
        <map-to xml="book" />

        <field name="id" type="long">
            <bind-xml name="id" node="element"/>
        </field>
        <field name="categoryName" type="string">
            <bind-xml name="categoryName" node="element" />
        </field>
        <field name="ISBN" type="string">
            <bind-xml name="isbn" node="element" />
        </field>
        <field name="Title" type="string">
            <bind-xml name="title" node="element" />
        </field>
        <field name="Publisher" type="string">
            <bind-xml name="publisher" node="element" />
        </field>
        <field name="Price" type="integer">
            <bind-xml name="price" node="element" />
        </field>
    </class>
</mapping>
